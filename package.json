{
  "name": "gotois-landing-page",
  "description": "goto Interactive Software Landing Page",
  "version": "3.0.0",
  "author": "Denis Baskovsky",
  "main": "mobirise/project.mobirise",
  "private": false,
  "dependencies": {},
  "devDependencies": {
    "firebase-tools": "~6.3.0",
    "html-minifier": "~3.5.21",
    "psi": "~3.1.0"
  },
  "engines": {
    "node": "~10.10.0",
    "npm": "~6.5.0"
  },
  "scripts": {
    "test": "exit 0",
    "minify": "html-minifier --collapse-whitespace --remove-comments --use-short-doctype --minify-css true --minify-js true --input-dir ./mobirise/ --output-dir .tmp/ --file-ext html",
    "start": "npm run copy && firebase serve --only hosting",
    "copy": "mkdir www && mkdir www/assets && mkdir www/assets/images ; cp -r ./static/ ./www/ ; cp -r ./mobirise/assets/images ./www/assets ; cp ./.tmp/index.html ./www/index.html",
    "deploy": "firebase deploy --only hosting --token $FIREBASE_TOKEN",
    "pagespeed": "psi --strategy mobile https://tewst-landing-page.firebaseapp.com"
  },
  "homepage": "https://github.com/gotois/landing-page",
  "repository": {
    "type": "git",
    "url": "git://github.com/gotois/landing-page.git"
  }
}
